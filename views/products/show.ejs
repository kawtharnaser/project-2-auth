<section class="products" id="products">

    <h1 class="heading">Products</h1>

    <div class="row">

        <div class="box-container">
<% products.forEach(function(pn) { %>


    <div class="box">
        <div class="image">
            <img src="<%= pn.productImg%>" alt="">
            <div class="icons">
                <!-- <a href="#" class="fas fa-heart"></a> -->
                <!-- <a href="#" class="fas fa-share"></a> -->


                <!-- form to add to cart to the action path with a posting request -->
                <form action="/cart/add-to-cart/<%= pn.id %>" method="POST">
                    <!-- pass all the listed attiributes to the path provided -->
                    <!-- store these as hidden inputs in the post request form -->
                    <input type="hidden" name="id" value="<%= pn.id%>">
                    <input type="hidden" name="productName" value="<%= pn.productName%>">
                    <input type="hidden" name="productPrice" value="<%= pn.productPrice%>">
                    <input type="hidden" name="stock" value="<%= pn.stock%>">
                    <input type="hidden" name="quantity" value="1">
                    <input type="hidden" name="productImg" value="<%= pn.productImg%>">
                    <!-- <label for="myCart" class="btn"><i class="fas fa-shopping-cart"></i></label> -->
                    <input type="submit" value="add to cart" class="btn btn-primary">


                </form>

            </div>
        </div>
        <div class="content">
            <h3><%= pn.productName%></h3>
            <div class="price"> BD<%=pn.productPrice%> </div>
        </div>
    </div>


  <% }) %>


</div>

</div>


</section>






